{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "globalEnv": ["LOG_LEVEL", "LOG_FORMAT", "DEBUG"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "PORT",
        "NODE_ENV",
        "AUTH_VALIDATION",
        "AUTH_INTROSPECTION_URL",
        "AUTH_WELL_KNOWN_URL",
        "AUTH_URL",
        "AUTH_CLIENT_ID",
        "AUTH_CLIENT_SECRET",
        "API_BASE_URL",
        "DB_MAIN_URL",
        "DB_REPLICA_URL",
        "DATABASE_POOL_SIZE",
        "SESSION_SECRET",
        "PSEUDONYMIZATION_SALT_ENDPOINT",
        "IDM_EDUPLACES_TOKEN_ENDPOINT",
        "IDM_EDUPLACES_API_ENDPOINT",
        "IDM_EDUPLACES_CLIENT_ID",
        "IDM_EDUPLACES_CLIENT_SECRET",
        "IDM_EDUPLACES_STAGING_TOKEN_ENDPOINT",
        "IDM_EDUPLACES_STAGING_API_ENDPOINT",
        "IDM_EDUPLACES_STAGING_CLIENT_ID",
        "IDM_EDUPLACES_STAGING_CLIENT_SECRET",
        "OFFERS_API_ENDPOINT",
        "OFFERS_CLIENT_ID",
        "OFFERS_CLIENT_SECRET",
        "SELF_BASE_URL",
        "AUTH_REQUESTED_SCOPES"
      ],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
