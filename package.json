{
  "name": "@fwu/vidis-rostering",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "api:dev": "turbo run dev --filter=@fwu/vidis-rostering-api",
    "ui:dev": "turbo run dev --filter=@fwu/vidis-rostering-ui",
