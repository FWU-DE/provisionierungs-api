{
  "name": "@fwu/vidis-rostering",
  "private": true,
  "scripts": {
    "prepare": "[ \"$NODE_ENV\" = \"production\" ] || husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "api:dev": "turbo run dev --filter=@fwu/vidis-rostering-api",
    "ui:dev": "turbo run dev --filter=@fwu/vidis-rostering-ui",
    "infra:up": "docker compose -f dev_env/docker-compose.yml -p vidis-rostering up -d",
    "infra:down": "docker compose -f dev_env/docker-compose.yml -p vidis-rostering down --remove-orphans",
    "test:infra:up": "docker compose -f test_env/docker-compose.yml -p vidis-rostering-test up -d",
    "test:infra:down": "docker compose -f test_env/docker-compose.yml -p vidis-rostering-test down --remove-orphans",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  }
}
