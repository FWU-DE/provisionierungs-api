    "@opentelemetry/instrumentation-http": "0.203.0",
    "@opentelemetry/instrumentation-undici": "^0.19.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "debug": "^4.4.3",
    "graphql": "^16.11.0",
    "jose": "^6.1.0",
    "opentelemetry-instrumentation-typeorm": "^0.41.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@fwu-rostering/eslint-config": "workspace:*",
    "@fwu-rostering/typescript-config": "workspace:*",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "eslint": "catalog:",
    "eslint-plugin-turbo": "^2.5.0",
    "jest": "catalog:",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "catalog:",
    "zx": "^8.8.5"
  },
  "engines": {
    "node": ">=22.19.0"
