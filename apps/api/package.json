{
  "name": "@fwu/vidis-rostering-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "nest start",
    "debug": "nest start --debug --watch",
    "lint": "eslint . --max-warnings=0",
    "check-types": "tsc --noEmit",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:cov": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "clean": "rm -rf dist/ .turbo/",
    "db:migration:build": "tsc",
    "db:migration:generate": "zx --verbose scripts/database/create-migration.mjs",
    "db:migration:run": "zx --verbose scripts/database/run-migrations.mjs",
    "db:migration:revert": "zx --verbose scripts/database/revert-migration.mjs",
    "db:reset": "zx --verbose scripts/database/reset.mjs",
    "db:fixture": "zx --verbose scripts/database/load-fixture.mjs"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@fwu-rostering/utils": "workspace:*",
    "@nestjs/apollo": "^13.2.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
